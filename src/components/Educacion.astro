---
const educacion = [
  {
    titulo: "Ingeniería en Sistemas de Información",
    universidad: "Universidad Tecnológica Nacional",
    periodo:"2021-En curso",
    logo: "/utn.webp", // Cambia esto por la ruta correcta
  },
  {
    titulo: "Perito Mercantil",
    universidad: "Escuela Superior de Comercio Carlos Pellegrini",
    periodo:"2016-2020",
    logo: "/logoPelle2.webp", // Cambia esto por la ruta correcta
  },
];
---

<section class="p-6">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {educacion.map((edu) => (
      <div class="bg-white p-6 rounded-lg shadow-md transform transition duration-300 hover:scale-105 hover:shadow-xl">
        <img src={edu.logo} alt={`Logo de ${edu.universidad}`} class="w-20 h-20 mx-auto mb-4" />
        <h3 class="text-xl font-semibold text-center text-black">{edu.titulo}</h3>
        <p class="text-gray-400 text-center">{edu.periodo}</p>
        <p class="text-gray-600 text-center">{edu.universidad}</p>
      </div>
    ))}
  </div>
</section>
